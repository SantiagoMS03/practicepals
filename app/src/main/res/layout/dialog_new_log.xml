<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:maxWidth="250dp"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/new_log_dialog_piece_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Piece Name"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/new_log_dialog_time_practiced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 hour, 5 minutes, 10 seconds"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_log_dialog_piece_name"

        />

    <EditText
        android:id="@+id/new_log_dialog_log_text"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:maxLines="4"
        android:minLines="1"
        android:lines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What did you work on?"
        android:textSize="14dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/new_log_dialog_time_practiced"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/new_log_dialog_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/new_log_dialog_log_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>