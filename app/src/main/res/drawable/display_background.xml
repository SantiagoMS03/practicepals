<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#333333" /> <!-- Dark gray, you can change this -->

    <!-- Corner radius -->
    <corners android:radius="10dp" /> <!-- Rounded corners -->

    <!-- Optional padding -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- White border, you can change this -->
</shape>
